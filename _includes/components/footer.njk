<footer class="text-sm text-slate-600 mt-6 p-4 border-t grid grid-cols-1 md:grid-cols-3 gap-4" aria-label="Footer">
  <div class="md:col-span-2">
    <div>
      {{ i18n[page.lang]["footer.contact"] or "Contact: +91 98765 43210 — 123 Soup Street" }}
    </div>
    <div class="mt-2">
      {{ i18n[page.lang]["footer.hours"] or "Open: 8:00 AM — 10:00 PM" }}
    </div>
  </div>

  <aside class="bg-white p-3 rounded shadow-sm flex items-start gap-3" role="complementary" aria-label="Meet the couple">
    <p>{{ pathPrefix }}</p>
    <img src="{{ pathPrefix | default('/') }}{{ i18n[page.lang]["footer.meet.image"] or 'assets/images/owners.jpg' }}" alt="{{ i18n[page.lang]["footer.meet.alt"] or 'Owners' }}" class="w-16 h-16 object-cover rounded-full flex-shrink-0" />
    <div>
      <div class="font-semibold">{{ i18n[page.lang]["footer.meet.title"] or "Meet the couple" }}</div>
      <div class="text-xs text-slate-600 mt-1">{{ i18n[page.lang]["footer.meet.desc"] or "A passionate couple serving comforting soups and juices with love." }}</div>
    </div>
  </aside>
</footer>
